<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_marginBottom="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/title_image_noti"
        android:layout_gravity="top"
        android:layout_margin="2dp"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_directions_bike"/>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title_text_noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery"
                android:textColor="#D24C0F"/>
            <TextView
                android:textSize="10dp"
                android:id="@+id/time_text_noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" . time"/>
        </LinearLayout>
<TextView
    android:id="@+id/message_text_noti"
    android:gravity="start"
    android:layout_gravity="center_vertical"
    android:textAlignment="textStart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="Convert the red, green and blue color values from decimal to hex.
Concatenate the 3 hex values of the red, green and blue togather: RRGGBB."
    android:textSize="15dp"/>
    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>